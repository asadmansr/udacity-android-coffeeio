<resources>

    <style name="title">
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="title_card">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="subtitle_card">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="title_banner">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/light_font</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="restaurant_title">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="restaurant_content">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

</resources>